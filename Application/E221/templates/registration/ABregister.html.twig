<div class="registration-form">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {{ form_start(registrationForm ) }}
        <div class="form-icon">
            <span><i class="icon icon-user"></i></span>
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.fullName, {'attr': {'class': 'form-control item','placeholder': 'Prénom et nom'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control item','placeholder': 'Email'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control item','placeholder': 'Mot de passe'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.profile, {'attr': {'class': 'form-control item custom-select'}}) }}
        </div>
        {# <div class="form-group">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control item','placeholder': 'AVATAR'}}) }}
        </div> #}
        {# <div class="form-group"> #}
            {{form_row(registrationForm.agreeTerms,{'attr': {'class':'custom-control custom-checkbox'},'label': 'Agree Terms'})}}
            {# {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'custom-control-input'}}) }} #}
        {# </div> #}
        <div class="form-group">
            <button type="submit" class="btn btn-block create-account">Créer compte</button>
        </div>
    {{ form_end(registrationForm) }} 
    <div class="social-media">
        <h5>Sign up with social media</h5>
        <div class="social-icons">
            <a href="#"><i class="icon-social-facebook" title="Facebook"></i></a>
            <a href="#"><i class="icon-social-google" title="Google"></i></a>
            <a href="#"><i class="icon-social-twitter" title="Twitter"></i></a>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %} <script src="{{asset("js/registration.js")}}"></script> {% endblock %}
