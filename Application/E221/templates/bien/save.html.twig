{% block body %}
       
    <div class="contact1">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="{{asset("images/lampu.jpg")}}" alt="IMG">
			</div>

            {{form_start(form,{'attr':{'class':'contact1-form validate-form'}})}}
				<span class="contact1-form-title">
					Cr√©ation de bien
				</span>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
                    {{form_widget(form.type,{'attr':{'class':'input1'}})}}
					{# <input class="input1" type="text" name="name" placeholder="Name"> #}
					<span class="shadow-input1"></span>
				</div>
				<div class="wrap-input1 validate-input" data-validate = "Message is required">
					{# <textarea class="input1" name="message" placeholder="Message"></textarea> #}
                    {{form_widget(form.description,{'attr':{'class':'input1'}})}}
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
                    {{form_widget(form.typeUsage,{'attr':{'class':'input1'}})}}
					{# <input class="input1" type="text" name="name" placeholder="Name"> #}
					<span class="shadow-input1"></span>
				</div>

                <div class="wrap-input1 validate-input" data-validate = "Name is required">
                    {{form_widget(form.zone,{'attr':{'class':'input1'}})}}
					{# <input class="input1" type="text" name="name" placeholder="Name"> #}
					<span class="shadow-input1"></span>
				</div>

                <div class="wrap-input1 validate-input" data-validate = "Name is required">
					{{form_widget(form.zoneField,{'attr':{'class':'input1'}})}}
				</div>

                <div class="wrap-input1 validate-input" data-validate = "Name is required">
                    {{form_widget(form.periode,{'attr':{'class':'input1'}})}}
					{# <input class="input1" type="text" name="name" placeholder="Name"> #}
					<span class="shadow-input1"></span>
				</div>

                <div class="wrap-input1 validate-input" data-validate = "Name is required">
                    {{form_widget(form.montant,{'attr':{'class':'input1'}})}}
					{# <input class="input1" type="text" name="name" placeholder="Name"> #}
					<span class="shadow-input1"></span>
				</div>

                

                <div class="wrap-input1 validate-input" data-validate = "Name is required">
                    {{form_widget(form.avatar,{'attr':{'class':'input1','placeholder':"Avatar"}})}}
					{# <input class="input1" type="text" name="name" placeholder="Name"> #}
					<span class="shadow-input1"></span>
				</div>

				<div class="container-contact1-form-btn">
					<button class="contact1-form-btn" type="submit">
						<span>
							Enregistraer
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
            {{form_end(form)}}

		</div>
	</div>

{% endblock %}

